<LinearLayout
	direction="vertical"
	id="UIParent"
	activity_scripts="res/lua_utils;res/global;res/pick_state"
	>

  <LinearLayout
  	  direction="horizontal"
	  id="panes-holder"
	  align="CENTER"
	  marginTop="50"
	  >
	<!--
		TODO $parent dans les attributs
		parentKey in child
	-->
	<LinearLayout
		id="left_holder"
		direction="vertical"
		width="250" height="800"
		backgroundColor="0x60BB0000" alpha="0.6"
		>

	  <LinearLayout
		  id="algo_holder"
		  marginTop="5" marginLeft="5" marginRight="5"
		  direction="vertical"
		  backgroundColor="0xFF000000"
		  >
		<SolidView  width="190" height="1"/>
		<TextView
			textColor="0xffffffff"
			textSize="14"
			text="Algorithms"
			marginTop="5"
			marginLeft="15"
			marginBottom="10"
			/>
	  </LinearLayout>

	  <LinearLayout
		  id="heu_holder"
		  marginTop="5" marginLeft="5" marginRight="5"
		  direction="vertical"
		  backgroundColor="0xFF000000"
		  >
		<SolidView  width="190" height="1"/>
		<TextView
			textColor="0xffffffff"
			textSize="14"
			text="Heuristics"
			marginTop="5"
			marginLeft="15"
			marginBottom="10"
			/>
	  </LinearLayout>

	  <LinearLayout
		  id="cost_holder"
		  marginTop="5" marginLeft="5" marginRight="5"
		  direction="vertical"
		  backgroundColor="0xFF000000"
		  >
		<SolidView  width="190" height="1"/>
		<TextView
			textColor="0xffffffff"
			textSize="14"
			text="Cost"
			marginTop="5"
			marginLeft="15"
			marginBottom="10"
			/>
		<SliderView
			id="cost_slider"
			marginLeft="5"
			width="180"
			height="30"
			backgroundColor="0xFF555555"
			minValue="-1"
			maxValue="1"
			steps="2"
			value="1"
			/>
		<TextView
			align="CENTER"
			id="cost_text"
			textColor="0xffffffff"
			textSize="12"
			text="1"
			marginTop="1"
			marginBottom="5"
			/>

	  </LinearLayout>

	  <SolidView id="lol" width="200" height="350" backgroundColor="0xFFFFFFFF" />
	  <SolidView id="lol" width="200" height="350" backgroundColor="0xFFFFFFFF" />
	  <SolidView id="lol" width="200" height="350" backgroundColor="0xFFFFFFFF" />
	  <SolidView id="lol" width="200" height="350" backgroundColor="0xFFFFFFFF" />
	  <SolidView id="lol" width="200" height="350" backgroundColor="0xFFFFFFFF" />
	  <SolidView id="lol" width="200" height="350" backgroundColor="0xFFFFFFFF" />
	  <SolidView id="lol" width="200" height="350" backgroundColor="0xFFFFFFFF" />
	  <SolidView id="lol" width="200" height="350" backgroundColor="0xFFFFFFFF" />
	</LinearLayout>

	<LinearLayout
		direction="vertical"
		id="mid-holder"
		align="TOP"
		backgroundColor="0xFFFF0000" alpha="0.66"
		>
	  <SolidView
		  id="puzzleFrame"
		  marginTop="35"
		  align="CENTER"
		  width="500" height="500"
		  backgroundColor="0x30FFFFFF" alpha="0.66"
		  />
	  <LinearLayout
	  	  direction="horizontal"
		  id="mid-bot-holder"
		  backgroundColor="0xFFFFFF00" alpha="0.66"
		  >
		<SliderView
			id="gen_slider"
			marginTop="10" marginBottom="10" marginLeft="10" marginRight="10"
			width="180"
			height="60"
			backgroundColor="0xFF555555"
			minValue="3"
			maxValue="20"
			steps="17"
			value="4"
			/>
		<Button
			id="randomPuzzleButton"
			marginTop="10" marginBottom="10" marginLeft="10" marginRight="10"
			align="CENTER"
			width="60"
			height="60"
			alpha="0.66"
			/>
		<Button
			id="filePuzzleButton"
			marginTop="10" marginBottom="10"
			align="CENTER"
			width="20"
			height="60"
			alpha="0.66"
			/>
		<Button
			id="defaultPuzzleButton"
			marginTop="10" marginBottom="10"
			align="CENTER"
			width="20"
			height="60"
			alpha="0.66"
			/>
		<Button
			id="solveLaunchButton"
			marginTop="10" marginBottom="10" marginLeft="10" marginRight="10"
			align="CENTER"
			width="120"
			height="60"
			alpha="0.66"
			/>
	  </LinearLayout>

	</LinearLayout>
	<LinearLayout
		direction="vertical"
		id="right-holder"
		backgroundColor="0x20BB0000" alpha="0.75"
		align="TOP"
		>
	  <SolidView
		  id="right-holder-dummy"
		  marginTop="5" marginBottom="5" marginLeft="10" marginRight="10"
		  width="230" height="25"
		  backgroundColor="0xFFBB0000" alpha="0.75"
		  />
	  <LinearLayout
		  direction="horizontal"
		  >
		<TextView
			text="<"
		id="lol_slider_right"
		textColor="0xFFFFFFFF"
		mouse_click_target="true"
		/>
		<SliderView
			id="lol_slider"
			width="150"
			height="30"
			backgroundColor="0xFF555555"
			minValue="-5"
			maxValue="5"
			steps="5"
			value="3.5"
			disabled="true"
			/>
		<TextView
			text=">"
			id="lol_slider_left"
			textColor="0xFFFFFFFF"
			mouse_click_target="true"
			/>
	  </LinearLayout>
	  <LinearLayout
	  	  direction="vertical"
		  id="bookmark-holder"
	  	  marginTop="10" marginRight="10"
		  align="LEFT"
		  >

	  </LinearLayout>
	</LinearLayout>



  </LinearLayout>
</LinearLayout>
