<LinearLayout
	direction="vertical"
	activity_scripts="res/lua_utils;res/global;res/pick_state"
	template_file="res/layout/pick_state_templates.xml;;;;"
>
	<LinearLayout
		id="panes-holder"
		direction="horizontal"
		align="CENTER"
		marginTop="50"
	>
		<ScrollableLayout
			id="left_holder"
			width="200"
			height="400"
			direction="vertical"
			backgroundColor="0x60BB0000"
			alpha="0.6"
		>
			<LinearLayout id="algo_holder" text="Algorithms" inherit="config-holder" />
			<LinearLayout id="heu_holder" text="Heuristics" inherit="config-holder" />
			<LinearLayout id="cost_holder" text="Cost" inherit="config-holder">
				<SliderView
					id="cost_slider"
					marginLeft="5"
					width="180"
					height="30"
					backgroundColor="0xFF555555"
					minValue="-1"
					maxValue="1"
					steps="2"
					value="1"
				/>
				<TextView
					align="CENTER"
					id="cost_text"
					textColor="0xffffffff"
					textSize="12"
					text="1"
					marginTop="1"
					marginBottom="5"
				/>
			</LinearLayout>
		</ScrollableLayout>

		<LinearLayout
			id="mid-holder"
			direction="vertical"
			align="TOP"
			backgroundColor="0xFFFF0000"
			alpha="0.66"
		>
			<SolidView
				id="puzzleFrame"
				marginTop="35"
				align="CENTER"
				width="500" height="500"
				backgroundColor="0x30FFFFFF"
				alpha="0.66"
			/>
			<LinearLayout
				id="mid-bot-holder"
				direction="horizontal"
				backgroundColor="0xE0FFFF00"
			>
				<LinearLayout
					id="genslider_holder"
					text="Size"
					inherit="gen-holder"
				>
					<SliderView
						id="gensize_slider"
						marginLeft="2"
						marginRight="2"
						width="180"
						height="35"
						backgroundColor="0xFF555555"
						minValue="3"
						maxValue="20"
						steps="17"
						value="4"
					/>
					<TextView
						align="CENTER"
						id="gensize_slider_text"
						textColor="0xffffffff"
						textSize="12"
						text="1"
						marginTop="1"
						marginBottom="3"
					/>
				</LinearLayout>

				<LinearLayout
					id="gencheckbox_holder"
					text="Solvable"
					inherit="gen-holder"
				>
					<LinearLayout
						id="gencheckboxyes_holder"
						marginLeft="3"
						direction="horizontal"
					>
						<CheckBox id="gencheckbox_yes" inherit="gen-checkbox" checked="true" />
						<TextView
							text="yes"
							textSize="12"
							marginLeft="3"
							textColor="0x99ffffff"
						/>
					</LinearLayout>
					<LinearLayout
						marginTop="3"
						marginLeft="3"
						id="gencheckboxno_holder"
						direction="horizontal"
					>
						<CheckBox id="gencheckbox_no" inherit="gen-checkbox" />
						<TextView
							text="no"
							textSize="12"
							marginLeft="3"
							textColor="0x99ffffff"
						/>
					</LinearLayout>
				</LinearLayout> <!-- #gencheckbox_holder -->

				<Button id="randomPuzzleButton" inherit="puzzle-button" />
				<Button id="solveLaunchButton" inherit="puzzle-button" />

			</LinearLayout> <!-- mid-bot-holder -->
			<LinearLayout
				text="Swaps"
				inherit="gen-holder"
			>
				<SliderView
					id="genloops_slider"
					marginLeft="10"
					marginRight="10"
					width="480"
					height="30"
					backgroundColor="0xFF555555"
					minValue="0"
					maxValue="12"
					steps="480"
					value="1"
				/>
				<TextView
					align="CENTER"
					id="genloops_slider_text"
					textColor="0xffffffff"
					textSize="12"
					text="1"
					marginTop="1"
					marginBottom="5"
				/>
			</LinearLayout>
		</LinearLayout> <!-- mid-holder -->
		<LinearLayout
			id="right-holder"
			direction="vertical"
			backgroundColor="0x20BB0000"
			alpha="0.75"
			align="TOP"
		>
			<SolidView
				id="right-holder-dummy"
				marginTop="5"
				marginBottom="5"
				marginLeft="10"
				marginRight="10"
				width="230"
				height="25"
				backgroundColor="0xFFBB0000"
				alpha="0.75"
			/>
			<LinearLayout
				direction="vertical"
				id="bookmark-holder"
				marginTop="10"
				marginRight="10"
				align="LEFT"
			/>
		</LinearLayout> <!-- right-holder -->
	</LinearLayout> <!-- panes-holder -->
</LinearLayout>
