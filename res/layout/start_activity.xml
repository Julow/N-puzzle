<VerticalLayout
	id="UIParent"
	activity_scripts="res/global.lua;res/utils.lua;res/start_activity/global.lua"
	>

  <HorizontalLayout
	  id="panes-holder"
	  horizontalAlign="CENTER"
	  marginTop="50"
	  >

	<SolidView
		id="left-holder-dummy"
		width="250" height="800"
		backgroundColor="0xFFBB0000" alpha="0.75"
		/>


	<VerticalLayout
		id="mid-holder"
		verticalAlign="TOP"
		backgroundColor="0xFFFF0000" alpha="0.75"
		>
	  <SolidView
		  id="puzzleFrame"
		  activity_scripts="res/puzzleFrame.lua"
		  marginTop="35"
		  horizontalAlign="CENTER"
		  width="400" height="400"
		  backgroundColor="0x30FFFFFF"
		  />
	  <HorizontalLayout
		  id="mid-bot-holder"
		  backgroundColor="0xFFFFFF00" alpha="0.75"
		  >
		<Button
			activity_scripts="res/start_activity/randomPuzzleButton.lua"
			id="randomPuzzleButton"
			marginTop="10" marginBottom="10" marginLeft="10" marginRight="10"
			horizontalAlign="CENTER"
			width="60"
			height="60"
			/>
	  </HorizontalLayout>

	</VerticalLayout>

	<SolidView
		id="right-holder-dummy"
		width="250" height="800"
		backgroundColor="0xFFBB0000" alpha="0.75"
		/>



  </HorizontalLayout>
</VerticalLayout>
